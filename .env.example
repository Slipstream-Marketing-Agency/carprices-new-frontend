# IMPORTANT: Copy this to .env.local and update with your actual values
# Never commit .env.local to version control

# API Configuration
NEXT_PUBLIC_API_URL=https://apis.carprices.ae/api/
NEXT_PUBLIC_GRAPHQL_ENDPOINT=https://apis.carprices.ae/graphql
NEXT_PUBLIC_SITE_URL=https://carprices.ae

# Node Environment
NODE_ENV=production

# Strapi API Token (Replace with your actual token)
STRAPI_API_TOKEN=your_strapi_token_here
NEXT_PUBLIC_STRAPI_API_TOKEN=your_strapi_token_here

# AWS Configuration (Replace with your actual credentials)
AWS_ACCESS_KEY_APP=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY_APP=your_aws_secret_key_here
AWS_REGION_APP=me-central-1
AWS_BUCKET_NAME=dev-s3.carprices.ae

# S3 URL
NEXT_PUBLIC_S3_URL=/api/uploads/

# Mode
NEXT_PUBLIC_MODE=production

# SMTP Configuration (Replace with your actual credentials)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=no-reply@slipstream.agency
SMTP_PASSWORD=your_smtp_password_here
